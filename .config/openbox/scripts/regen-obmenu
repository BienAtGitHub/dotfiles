#!/bin/dash
WORKDIR=~/.config/openbox
MENUFILE=$WORKDIR/menu-left.xml
notify-send Openbox 'Regenerating Applications menu...'
mv $MENUFILE $MENUFILE.bak
printf '<?xml version="1.0" encoding="UTF-8"?>
<!-- DO NOT EDIT THIS FILE IF YOU DONT KNOW WHAT YOU ARE DOING
	 ANY EXTERNAL CHANGES WILL BE DELETED BY regen-obmenu -->
<openbox_menu xmlns="http://openbox.org/" xsi:schemaLocation="http://openbox.org/">
	<menu id="left-menu" label="Openbox 3">
	<separator label="Applications" />
	' >> $MENUFILE
python3 $WORKDIR/scripts/obamenu.py >> $MENUFILE
printf '</menu>
</openbox_menu>' >> $MENUFILE
openbox --reconfigure
notify-send Openbox 'Regenerated Applications menu successfully.'
